{
  "name": "search_legal_database_tool",
  "openapi": "3.1.0",
  "info": {
    "title": "Search Legal Database Tool",
    "description": "Tool for searching legal knowledge database with advanced filtering and pagination",
    "version": "2.0.0"
  },
  "servers": [
    { "url": "https://f71ad14b90bf.ngrok-free.app" }
  ],
  "auth": [],
  "paths": {
    "/api/legal/search": {
      "get": {
        "description": "Search legal documents with advanced filtering and pagination",
        "operationId": "search_legal_database",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Search query for legal knowledge"
          },
          {
            "name": "category",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["CASE_LAW", "STATUTE", "REGULATION", "LEGAL_COMMENTARY", "LEGAL_FORM"]
            },
            "description": "Filter by document category"
          },
          {
            "name": "jurisdiction",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filter by jurisdiction (e.g., 'federal', 'state:CA')"
          },
          {
            "name": "min_date",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Earliest document date (YYYY-MM-DD)"
          },
          {
            "name": "max_date",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Latest document date (YYYY-MM-DD)"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            },
            "description": "Maximum number of results to return"
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "description": "Number of results to skip for pagination"
          },
          {
            "name": "sort_by",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["relevance", "date", "title"],
              "default": "relevance"
            },
            "description": "Field to sort results by"
          },
          {
            "name": "sort_order",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            },
            "description": "Sort order (ascending or descending)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "title": { "type": "string" },
                          "content": { "type": "string" },
                          "summary": { "type": "string" },
                          "category": { 
                            "type": "string",
                            "enum": ["CASE_LAW", "STATUTE", "REGULATION", "LEGAL_COMMENTARY", "LEGAL_FORM"]
                          },
                          "jurisdiction": { "type": "string" },
                          "citation": { "type": "string" },
                          "effectiveDate": { 
                            "type": "string",
                            "format": "date"
                          },
                          "relevanceScore": { 
                            "type": "number",
                            "format": "float",
                            "minimum": 0,
                            "maximum": 1
                          },
                          "source": { "type": "string" },
                          "url": { 
                            "type": "string",
                            "format": "uri"
                          }
                        }
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "total": { "type": "integer" },
                        "limit": { "type": "integer" },
                        "offset": { "type": "integer" },
                        "hasMore": { "type": "boolean" }
                      }
                    },
                    "queryInfo": {
                      "type": "object",
                      "properties": {
                        "originalQuery": { "type": "string" },
                        "processedQuery": { "type": "string" },
                        "searchTimeMs": { "type": "number" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid search parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": false },
                    "error": { "type": "string" },
                    "details": { "type": "object" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}