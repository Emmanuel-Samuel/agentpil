{
  "name": "update_claim_data_tool",
  "openapi": "3.1.0",
  "info": {
    "title": "Update Claim Data Tool",
    "description": "Tool for updating existing claim data. Supports both incremental (single field) and bulk (multiple fields) updates.",
    "version": "3.0.0"
  },
  "servers": [
    { "url": "https://ec202d6f0fb0.ngrok-free.app" }
  ],
  "auth": [],
  "paths": {
    "/api/claims/{claim_id}": {
      "patch": {
        "description": "Update an existing claim with one or more fields. Only provided fields will be updated.",
        "operationId": "update_claim",
        "parameters": [
          {
            "name": "claim_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID of the claim to update"
          },
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID of the user making the update"
          }
        ],
        "requestBody": {
          "description": "Fields to update. Include only the fields you want to change. All fields are optional.",
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Brief title for the claim"
                  },
                  "description": {
                    "type": "string",
                    "description": "Detailed description of the claim"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["PENDING_INFORMATION", "UNDER_REVIEW", "PENDING_DOCUMENTS", "INVESTIGATION", "PRE_SUIT", "PRE_LITIGATION", "LITIGATION", "RESOLVED_AND_CLOSED"],
                    "description": "Current status of the claim"
                  },
                  "assignedCaseManager": {
                    "type": "string",
                    "description": "ID of the assigned case manager"
                  },
                  "injured": {
                    "type": "boolean",
                    "description": "Whether the user was injured"
                  },
                  "healthInsurance": {
                    "type": "boolean",
                    "description": "Whether the user has health insurance"
                  },
                  "relationship": {
                    "type": "string",
                    "enum": ["Self", "Parent", "Child", "Sibiling", "Friend", "Representative", "Other"],
                    "description": "Relationship to the injured party"
                  },
                  "otherRelationship": {
                    "type": "string",
                    "description": "Specify if relationship is 'Other'"
                  },
                  "healthInsuranceNumber": {
                    "type": "string",
                    "description": "Health insurance number if applicable"
                  },
                  "isOver65": {
                    "type": "boolean",
                    "description": "Whether the user is over 65 years old"
                  },
                  "incident_datetime": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the incident occurred"
                  },
                  "incident_location": {
                    "type": "string",
                    "description": "Where the incident occurred"
                  },
                  "incident_description": {
                    "type": "string",
                    "description": "Detailed description of the incident"
                  },
                  "incident_witnesses": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": { "type": "string" },
                        "phone": { "type": "string" }
                      }
                    },
                    "description": "List of witnesses"
                  },
                  "incident_policeReportNumber": {
                    "type": "string",
                    "description": "Police report number if available"
                  },
                  "incident_workRelated": {
                    "type": "boolean",
                    "description": "Whether the incident was work related"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Claim updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "message": { "type": "string" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "title": { "type": "string" },
                        "description": { "type": "string" },
                        "status": { "type": "string" },
                        "injured": { "type": "boolean" },
                        "relationship": { "type": "string" },
                        "otherRelationship": { "type": "string" },
                        "healthInsurance": { "type": "boolean" },
                        "healthInsuranceNumber": { "type": "string" },
                        "isOver65": { "type": "boolean" },
                        "assignedCaseManager": { "type": "string" },
                        "incident": {
                          "type": "object",
                          "properties": {
                            "datetime": { "type": "string", "format": "date-time" },
                            "location": { "type": "string" },
                            "description": { "type": "string" },
                            "witnesses": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "name": { "type": "string" },
                                  "phone": { "type": "string" }
                                }
                              }
                            },
                            "policeReportNumber": { "type": "string" },
                            "workRelated": { "type": "boolean" }
                          }
                        },
                        "createdAt": { "type": "string", "format": "date-time" },
                        "updatedAt": { "type": "string", "format": "date-time" }
                      }
                    },
                    "updated_fields": {
                      "type": "array",
                      "items": { "type": "string" },
                      "description": "List of fields that were updated"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "No fields provided for update"
          },
          "404": {
            "description": "Claim not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}